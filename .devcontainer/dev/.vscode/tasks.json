{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build package",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/code" // Set the working directory to 'code' folder
            },
            "problemMatcher": []
        },
        {
            "label": "install package",
            "type": "shell",
            "command": "pip3",
            "args": [
                "install",
                "--upgrade",
                ".",
            ],
            "options": {
                "cwd": "${workspaceFolder}/code" // Set the working directory to 'code' folder
            },
            "problemMatcher": []
        },
        {
            "label": "rebuild package",
            "dependsOn": [
                "build package",
                "install package"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install docs-book dependencies",
            "type": "shell",
            "command": "pip3",
            "args": [
                "install",
                "--upgrade",
                "-r",
                "requirements.txt",
            ],
            "options": {
                "cwd": "${workspaceFolder}/code/docs-book" // Set the working directory to 'docs-book' folder
            },
            "problemMatcher": []
        },
        {
            "label": "build docs-book",
            "type": "shell",
            "command": "jupyter-book",
            "args": [
                "build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/code/docs-book" // Set the working directory to 'docs-book' folder
            },
            "problemMatcher": []
        }
    ]
}